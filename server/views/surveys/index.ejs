<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h3>Surveys List </h3>
          <a href="/surveys/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a Survey</a>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Phone Number</th>
              <th class="text-center">Email</th>
              <th class="text-center">Edit</th>
              <th class="text-center">Remove</th>
            </tr>
            <!-- Template Row -->
            <% for (let count = 0; count < surveys.length; count++) { %>
            <tr>
              <td class="text-center"><%= surveys[count].name %></td>
              <td class="text-center"><%= surveys[count].phoneNumber %></td>
              <td class="text-center"><%= surveys[count].email %></td>
              <td class="text-center">
              <a href="/surveys/<%= surveys[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Edit</a>
               </td>
              <td class="text-center">
              <a href="/surveys/delete/<%= surveys[count]._id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


